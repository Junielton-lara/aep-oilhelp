<% donations.forEach(donation => { %>
    <div class="donation <%- donation.accepted == 1 ? 'accepted' : '' %> <%- donation.complete == 1 ? 'completed' : '' %>">
        <h3><%= donation.donor.firstName + " " + donation.donor.lastName %></h3>
        <p class="time"><%= donation.collectDate %></p>
        <p class="address"><%= donation.donor.address.street %></p>
        <% if(donation.complete != 1) { %>
            <form action="/doacao/<%= donation.id %>/concluir" method="POST">
                <input type="submit" id="conclude" value="Concluir">
            </form>
        <% } %>
        
    </div>
<% }); %>
